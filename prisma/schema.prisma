// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  connectedPages ConnectedPage[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ConnectedPage {
  id                    String    @id @default(cuid())
  userId                String
  pageId                String    // Facebook Page ID
  pageName              String
  pageAccessToken       String    // Long-lived access token for the page
  provider              String    @default("facebook") // "facebook" or "instagram"
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  lastCommentsFetchedAt DateTime? // Timestamp of last successful comment fetch
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments              Comment[]

  @@unique([userId, pageId, provider])
}

model Comment {
  id                String        @id @default(cuid())
  pageId            String        // Reference to ConnectedPage
  connectedPage     ConnectedPage @relation(fields: [pageId], references: [id], onDelete: Cascade)
  commentId         String        // Facebook comment ID
  postId            String        // Facebook post ID
  message           String
  authorName        String
  authorId          String
  createdAt         DateTime      // When comment was created on Facebook
  fetchedAt         DateTime      @default(now())
  replied           Boolean       @default(false)
  replyMessage      String?
  status            String        @default("pending") // "pending", "replied", "ignored"

  @@unique([pageId, commentId])
  @@index([pageId, status])
}
